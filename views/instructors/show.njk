{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/instructors">
  <section 
    class="avatar"
    style="background: url({{ instructor.avatar_url }})"
  ></section>
  <section class="details">

    <h3>Detalhes</h3>

    <div class="item">
      <div>Instrutor</div>
      <div>{{ instructor.name }}</div>
    </div>

    <div class="item">
      <div>Idade</div>
      <div>{{ instructor.birth }}</div>
    </div>

     <div class="item">
      <div>Sexo</div>
      <div>
        {% if instructor.gender === "M" %}
          Masculino
        {% else %}
          Feminino
        {% endif %}
      </div>
    </div>

    <div class="item">
      <div>Acompanhamento</div>
      {% for service in services %}
      <span>{{ service }}</span>
      {% endfor %}

    </div>

    <div class="item">
      <div>Desde</div>
      <div>{{ instructor.created_at }}</div>
    </div>

  </section>
</form>
{% endblock content %}
